iridanext {
    enabled = true
    output {
        files.idkey = "irida_id"
        path = "${params.outdir}/iridanext.output.json.gz"
        overwrite = true
        metadata {
            samples {
                ignore = ["sample_name"]
                csv {
                    path = "**/transformation/transformation.csv"
                    idcol = "sample"
                }
            }
        }
    }
}
